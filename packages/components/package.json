{
  "name": "@localyze-pluto/components",
  "version": "1.0.0",
  "description": "Pluto Design System Components",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Localitos/pluto.git",
    "directory": "packages/components"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react --minify",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "lint": "TIMING=1 eslint src/**/*.ts* --fix",
    "prettier-check": "prettier --check package.json tsconfig.json \"./src/**/*.{tsx,ts,json}\"",
    "test": "jest",
    "tsc": "tsc"
  },
  "dependencies": {
    "@localyze-pluto/theme": "^0.0.2",
    "@stitches/react": "^1.2.8",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@localyze-pluto/eslint-config": "^1.0.1",
    "@localyze-pluto/tsconfig": "^1.0.0",
    "@testing-library/jest-dom": "^5.14.5",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.4",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.4",
    "eslint": "^8.24.0",
    "jest": "^28.1.2",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^28.1.2",
    "jest-watch-typeahead": "^2.2.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "ts-jest": "^28.0.5",
    "tslib": "^2.4.0",
    "tsup": "^6.2.3",
    "typescript": "^4.5.3"
  },
  "browserslist": [
    "extends @localyze-pluto/browserslist-config"
  ]
}
